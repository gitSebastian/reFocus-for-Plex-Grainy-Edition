<?xml version="1.0"?>
<window type="dialog" id="142">
	<defaultcontrol always="true">603</defaultcontrol>
	<controls>
		<include>clock</include>
		<!-- background image -->
		<control type="image" id="1">
			<posx>0</posx>
			<posy>630</posy>
			<include>screenwidth</include>
			<height>100</height>
			<texture flipy="false">OSD/fullscreenInfo.png</texture>
			<visible>[VideoPlayer.Content(movies) | VideoPlayer.Content(episodes) | VideoPlayer.Content(files)] + ![Window.IsActive(2901)]</visible>
			<animation effect="fade" start="0" end="90" time="250">WindowOpen</animation>
			<include>videoFullScreenInfo</include>
		</control>
		<!-- MOVIES & EPISODES & FILES -->
		<control type="grouplist" id="1">
			<orientation>horizontal</orientation>
			<posx>30</posx>
			<posy>675</posy>
			<visible>[VideoPlayer.Content(movies) | VideoPlayer.Content(episodes) | VideoPlayer.Content(files)] + ![Window.IsActive(2901)]</visible>
			<include>videoFullScreenInfo</include>
			<!-- movies & files -->
			<control type="grouplist">
				<width>1220</width>
				<height>40</height>
				<aligny>center</aligny>
				<orientation>horizontal</orientation>
				<textcolor>Color4</textcolor>
				<font>osd1</font>
				<visible>VideoPlayer.Content(movies) | VideoPlayer.Content(files)</visible>
				<control type="label" id="1">
					<label>$INFO[Player.Time] &#xB7;</label>
					<width min="29" max="150">auto</width>
					<textcolor>Color4</textcolor>
					<font>osd1</font>
				</control>
				<control type="label" id="1">
					<label>$INFO[VideoPlayer.Title]</label>
					<width min="29" max="1000">auto</width>
					<textcolor>Color4</textcolor>
					<font>osd1</font>
					<scroll>true</scroll>
				</control>
			</control>
			<!-- episodes -->
			<control type="grouplist">
				<width>1220</width>
				<aligny>center</aligny>
				<orientation>horizontal</orientation>
				<textcolor>Color4</textcolor>
				<font>osd1</font>
				<visible>VideoPlayer.Content(episodes)</visible>
				<control type="label" id="1">
					<label>$INFO[Player.Time] &#xB7;</label>
					<width min="29" max="150">auto</width>
					<textcolor>Color4</textcolor>
					<font>osd1</font>
				</control>
				<control type="label" id="1">
					<label>$LOCALIZE[31096] &#xB7; $INFO[VideoPlayer.Title]</label>
					<width min="29" max="1000">auto</width>
					<textcolor>Color4</textcolor>
					<font>osd1</font>
					<scroll>true</scroll>
				</control>
			</control>
			<!-- duration, shared -->
			<control type="label" id="1">
				<posy>130</posy>
				<width>150</width>
				<align>right</align>
				<label>&#xB7; $INFO[Player.Duration]</label>
				<textcolor>Color4</textcolor>
				<font>osd1</font>
				<visible>VideoPlayer.Content(movies) | VideoPlayer.Content(episodes) | VideoPlayer.Content(files)</visible>
			</control>
		</control>
		<!-- progress bar -->
		<control type="progress" id="1">
			<description>Progressbar</description>
			<posx>30</posx>
			<posy>710</posy>
			<width>1220</width>
			<height>1</height>
			<info>Player.Progress</info>
			<visible>[VideoPlayer.Content(movies) | VideoPlayer.Content(episodes) | VideoPlayer.Content(files)] + ![Window.IsActive(2901)]</visible>
		</control>
	</controls>
</window>
