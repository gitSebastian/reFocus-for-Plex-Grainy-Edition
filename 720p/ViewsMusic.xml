				<control type="label">
					<posx>40</posx>
					<width>500</width>
					<label>$INFO[ListItem.Label]</label>
					<include>listMenuFocus</include>
					<visible>IsEmpty(ListItem.Title)</visible>
				</control>
				<control type="label">
					<posx>600</posx>
					<width>500</width>
					<label>$INFO[ListItem.Duration]</label>
					<align>right</align>
					<font>normalCaps</font>
					<selectedcolor>Focused</selectedcolor>
					<include>listMenuFocus</include>
					<visible>!IsEmpty(ListItem.Title)</visible>
				</control>
			</focusedlayout>
