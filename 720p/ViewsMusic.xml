			<itemlayout condition="Container.Content(albums) | Container.Content(songs)" width="770" height="69">
				<control type="image">
					<posy>-28</posy>
					<width>635</width>
					<height>100</height>
					<texture border="0,30,0,30">1black.png</texture>
				</control>
				<control type="label">
					<posx>40</posx>
					<width>440</width>
					<label>$INFO[ListItem.Album]</label>
					<font>bigLow</font>
					<include>listMenu</include>
					<visible>Container.Content(albums)</visible>
				</control>
				<control type="label">
					<posx>40</posx>
					<width>440</width>
					<label>$INFO[ListItem.Title]</label>
					<font>bigLow</font>
					<include>listMenu</include>
					<visible>Container.Content(songs)</visible>
				</control>
				<control type="label">
					<posx>40</posx>
					<width>440</width>
					<label>$INFO[ListItem.Label]</label>
					<font>bigLow</font>
					<include>listMenu</include>
					<visible>IsEmpty(ListItem.Album) + IsEmpty(ListItem.Title)</visible>
				</control>
				<control type="label">
					<posx>40</posx>
					<posy>28</posy>
					<width>560</width>
					<label>$INFO[ListItem.Artist]</label>
					<font>smallCaps</font>
					<textcolor>Color2</textcolor>
					<include>listMenu</include>
					<visible>!IsEmpty(ListItem.Album) | Container.Content(songs)</visible>
				</control>
				<control type="image">
					<posx>475</posx>
					<posy>13</posy>
					<width>128</width>
					<height>22</height>
					<info>ListItem.StarRating</info>
					<aspectratio align="right">keep</aspectratio>
					<animation effect="fade" end="30" time="0" condition="true">Conditional</animation>
				</control>
			</itemlayout>
			<focusedlayout condition="Container.Content(albums) | Container.Content(songs)" width="770" height="69">
				<control type="image">
					<posy>-28</posy>
					<width>650</width>
					<height>122</height>
					<texture border="0,30,0,30">views/list-focus.png</texture>
					<visible>!ControlGroup(300).HasFocus</visible>
					<include>fadeinout</include>
				</control>
				<control type="label">
					<posx>40</posx>
					<width>440</width>
					<label>$INFO[ListItem.Album]</label>
					<font>bigLow</font>
					<include>listMenuFocus</include>
					<visible>Container.Content(albums)</visible>
				</control>
				<control type="label">
					<posx>40</posx>
					<width>440</width>
					<label>$INFO[ListItem.Label]</label>
					<font>bigLow</font>
					<include>listMenuFocus</include>
					<visible>IsEmpty(ListItem.Album) + IsEmpty(ListItem.Title)</visible>
				</control>
				<control type="label">
					<posx>40</posx>
					<width>560</width>
					<label>$INFO[ListItem.Title]</label>
					<font>bigLow</font>
					<include>listMenuFocus</include>
					<visible>Container.Content(songs)</visible>
				</control>
				<control type="label">
					<posx>40</posx>
					<posy>25</posy>
					<width>485</width>
					<label>$INFO[ListItem.Artist]</label>
					<font>smallCaps</font>
					<include>listMenuFocus</include>
				</control>
				<control type="image">
					<posx>475</posx>
					<posy>13</posy>
					<width>128</width>
					<height>22</height>
					<info>ListItem.StarRating</info>
					<aspectratio align="right">keep</aspectratio>
					<animation effect="fade" start="30" end="200" time="250" condition="true">Conditional</animation>
				</control>
			</focusedlayout>
		</control>
	</include>
	<!-- SLIDE VIEW -->
	<include name="view_SlideMusic">
		<control type="wraplist" id="52">
			<viewtype label="Slide">wrap</viewtype>
			<posx>-55</posx>
			<posy>100</posy>
			<width>1400</width>
			<height>600</height>
			<onleft>52</onleft>
			<onright>52</onright>
			<onup>300</onup>
			<ondown>70</ondown>
			<pagecontrol>70</pagecontrol>
			<orientation>horizontal</orientation>
			<scrolltime>50</scrolltime>
			<focusposition>1</focusposition>
			<visible>!Window.IsActive(progressdialog) + [Container.Content(albums) | Container.Content(singles) | Container.Content(songs)]</visible>
			<include>transition2</include>
			<include>infoDialogHide</include>
			<include>contextMenuHide</include>
			<itemlayout height="226" width="280">
				<control type="image">
					<width>298</width>
					<height>298</height>
					<texture border="55">frames/albumFrame.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="image">
					<posx>27</posx>
					<posy>27</posy>
					<width>244</width>
					<height>244</height>
					<aspectratio scalediffuse="false" align="center">scale</aspectratio>
					<texture diffuse="frames/albumFrameMask.png" fallback="thumbs/album.png">$INFO[ListItem.Thumb]</texture>
				</control>
			</itemlayout>
			<focusedlayout height="250" width="280">
				<control type="image">
					<width>298</width>
					<height>298</height>
					<texture border="55">frames/albumFrame.png</texture>
					<aspectratio>stretch</aspectratio>
					<include>albumSlideFocus</include>
				</control>
				<control type="image">
					<posx>27</posx>
					<posy>27</posy>
					<width>244</width>
					<height>244</height>
					<aspectratio scalediffuse="false" align="center">scale</aspectratio>
					<texture diffuse="frames/albumFrameMask.png" fallback="thumbs/album.png">$INFO[ListItem.Thumb]</texture>
					<include>albumSlideFocus</include>
				</control>
			</focusedlayout>
		</control>
	</include>
	<include name="view_SlideWideMusic">
		<control type="wraplist" id="55">
			<viewtype label="ArtSlide">wrap</viewtype>
			<posx>-720</posx>
			<posy>90</posy>
			<width>2190</width>
			<height>430</height>
			<onleft>55</onleft>
			<onright>55</onright>
			<ondown>71</ondown>
			<pagecontrol>71</pagecontrol>
			<onup>300</onup>
			<scrolltime>200</scrolltime>
			<orientation>horizontal</orientation>
			<focusposition>2</focusposition>
			<preloaditems>3</preloaditems>
			<visible>!Window.IsActive(progressdialog) + [Container.Content(albums) | Container.Content(singles) | Container.Content(songs)]</visible>
			<include>transition2</include>
			<include>infoDialogHide</include>
			<include>contextMenuHide</include>
			<itemlayout width="485" height="300">
				<control type="image">
					<width>504</width>
					<height>307</height>
					<texture border="48">frames/wideFrame.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="image">
					<posx>27</posx>
					<posy>27</posy>
					<width>453</width>
					<height>255</height>
					<texture background="true" diffuse="frames/wideFrameMask.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
					<aspectratio scalediffuse="false" align="center">scale</aspectratio>
				</control>
				<control type="image">
					<posx>27</posx>
					<posy>27</posy>
					<width>453</width>
					<height>255</height>
					<texture background="true" diffuse="frames/wideFrameMask.png">$INFO[ListItem.Thumb]</texture>
					<aspectratio scalediffuse="false" align="center">scale</aspectratio>
					<visible>IsEmpty(ListItem.Property(Fanart_Image)) + !IsEmpty(ListItem.Title)</visible>
				</control>
				<control type="image">
					<posx>27</posx>
					<posy>27</posy>
					<width>453</width>
					<height>255</height>
					<texture background="true" diffuse="frames/wideFrameMask.png">backgrounds/library/artistNoFanartSmall.png</texture>
					<aspectratio scalediffuse="false" align="center">scale</aspectratio>
					<visible>IsEmpty(ListItem.Property(Fanart_Image)) + IsEmpty(ListItem.Title)</visible>
				</control>
			</itemlayout>
			<focusedlayout height="300" width="485">
				<control type="image">
					<width>504</width>
					<height>307</height>
					<texture border="48">frames/wideFrame.png</texture>
					<aspectratio>stretch</aspectratio>
					<include>focus_SlideWide</include>
				</control>
				<control type="image">
					<posx>27</posx>
					<posy>27</posy>
					<width>453</width>
					<height>255</height>
					<texture background="true" diffuse="frames/wideFrameMask.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
					<aspectratio scalediffuse="false" align="center">scale</aspectratio>
					<include>focus_SlideWide</include>
				</control>
				<control type="image">
					<posx>27</posx>
					<posy>27</posy>
					<width>453</width>
					<height>255</height>
					<texture background="true" diffuse="frames/wideFrameMask.png">$INFO[ListItem.Thumb]</texture>
					<aspectratio scalediffuse="false" align="center">scale</aspectratio>
					<visible>IsEmpty(ListItem.Property(Fanart_Image)) + !IsEmpty(ListItem.Title)</visible>
					<include>focus_SlideWide</include>
				</control>
				<control type="image">
					<posx>27</posx>
					<posy>27</posy>
					<width>453</width>
					<height>255</height>
					<texture background="true" diffuse="frames/wideFrameMask.png">backgrounds/library/artistNoFanartSmall.png</texture>
					<aspectratio scalediffuse="false" align="center">scale</aspectratio>
					<visible>IsEmpty(ListItem.Property(Fanart_Image)) + IsEmpty(ListItem.Title)</visible>
					<include>focus_SlideWide</include>
				</control>
			</focusedlayout>
		</control>
	</include>
