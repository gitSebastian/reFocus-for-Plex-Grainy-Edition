			</control>
			<control type="textbox" id="8">
				<posy>60</posy>
				<width>960</width>
				<height>120</height>
				<align>left</align>
				<aligny>top</aligny>
				<label>$INFO[ListItem.Plot]</label>
				<textcolor>text</textcolor>
				<font>normalLow</font>
			</control>
		</control>

